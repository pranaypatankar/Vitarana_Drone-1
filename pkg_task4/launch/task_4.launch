<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- <node pkg="pkg_task4" type="qr_detect.py" name="qrcode_scan" /> -->
    <node pkg="pkg_task4" type="marker_detect.py" name="marker_detect" />
    <node pkg="pkg_task4" type="gripper_client.py" name="gripper_client" />
    <node pkg="pkg_task4" type="attitude_controller.py" name="attitude_controller" />
    <node pkg="pkg_task4" type="K_path_planner.py" name="path_planner" />
    <node pkg="pkg_task4" type="position_controller.py" name="position_controller" />

    <arg name="record" default="false"/>
    <arg name="duration" default="280"/>
    <arg name="rec_name" default="Task_4_VD.bag"/>


    <group if="$(arg record)">
        <node name="rosbag_record_position" pkg="rosbag" type="record"
        args="record -O $(find vitarana_drone)/bag_files/$(arg rec_name) --duration=$(arg duration) /gazebo/model_states_throttle" output="screen"/>

    </group>

</launch>
